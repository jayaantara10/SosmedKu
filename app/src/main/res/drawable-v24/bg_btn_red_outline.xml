<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle"
            >
            <stroke
                android:color="@color/red"
                android:width="3dp"/>
            <corners
                android:radius="30dp"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="300dp"
                android:height="50dp"
                />
        </shape>
    </item>
</layer-list>