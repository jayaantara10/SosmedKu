<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.ViewDataSosmedActivity"
    android:background="@color/yelow">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/comicbd"
                android:text="@string/str_title_data_sosmed"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"/>

            <androidx.cardview.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_inisial_akun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:background="@null"
                        android:drawableStart="@drawable/ic_baseline_title_24"
                        android:textColor="@color/dark_teal"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/comic"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_jenis_sosmed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:background="@null"
                        android:drawableStart="@drawable/ic_baseline_forum_24"
                        android:textColor="@color/dark_teal"
                        android:drawablePadding="10dp"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:background="@null"
                        android:drawableStart="@drawable/ic_baseline_email_24"
                        android:drawablePadding="10dp"
                        android:textColor="@color/dark_teal"
                        android:fontFamily="@font/comic"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:background="@null"
                        android:drawableStart="@drawable/ic_baseline_person_24"
                        android:drawablePadding="10dp"
                        android:textColor="@color/dark_teal"
                        android:fontFamily="@font/comic"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/tv_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:background="@null"
                        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
                        android:drawablePadding="10dp"
                        android:textColor="@color/dark_teal"
                        android:fontFamily="@font/comic"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/comic"
                            android:textColor="@color/dark_teal"
                            android:textSize="18sp"
                            android:text="@string/str_status_akun"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/comic"
                            android:textColor="@color/dark_teal"
                            android:textSize="18sp"
                            android:text=" : "/>

                        <TextView
                            android:id="@+id/tv_status_akun"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/comic"
                            android:textColor="@color/dark_teal"
                            android:textSize="18sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/comic"
                            android:textColor="@color/dark_teal"
                            android:textSize="18sp"
                            android:text="@string/str_data_prioritas"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/comic"
                            android:textColor="@color/dark_teal"
                            android:textSize="18sp"
                            android:text=" : "/>

                        <TextView
                            android:id="@+id/tv_skala_prioritas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/comic"
                            android:textColor="@color/dark_teal"
                            android:textSize="18sp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/comic"
                            android:textColor="@color/dark_teal"
                            android:textSize="18sp"
                            android:text="@string/str_tanda_bisnis"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/comic"
                            android:textColor="@color/dark_teal"
                            android:textSize="18sp"
                            android:text=" : "/>

                        <TextView
                            android:id="@+id/tv_tanda_bisnis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/comic"
                            android:textColor="@color/dark_teal"
                            android:textSize="18sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_kembali"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/bg_btn_red_outline"
                            android:focusable="false"
                            android:fontFamily="@font/comicbd"
                            android:text="@string/str_btn_kembali"
                            android:textColor="@color/red"
                            android:textSize="16dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_edit"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/bg_btn_teal_outline"
                            android:focusable="false"
                            android:fontFamily="@font/comicbd"
                            android:text="@string/str_btn_edit"
                            android:textColor="@color/teal"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>